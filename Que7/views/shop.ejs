<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Shopping Cart</h1>
            <div>
                <a href="/admin" class="btn btn-secondary">Admin</a>
                <a href="/cart" class="btn btn-primary">Cart (<%= cart ? cart.items.length : 0 %>)</a>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-3">
                <h3>Categories</h3>
                <% categories.forEach(cat => { %>
                    <div class="card mb-2">
                        <div class="card-body">
                            <a href="/category/<%= cat._id %>" class="text-decoration-none"><%= cat.name %></a>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <div class="col-md-9">
                <h3>All Products</h3>
                <div class="row">
                    <% products.forEach(prod => { %>
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5><%= prod.name %></h5>
                                    <p>â‚¹<%= prod.price %></p>
                                    <small class="text-muted"><%= prod.category.name %></small>
                                    <br><small>Stock: <%= prod.stock %></small>
                                    <% if (prod.stock > 0) { %>
                                        <form method="POST" action="/cart/add" class="mt-2">
                                            <input type="hidden" name="productId" value="<%= prod._id %>">
                                            <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                                        </form>
                                    <% } else { %>
                                        <button class="btn btn-secondary btn-sm mt-2" disabled>Out of Stock</button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>